<section class="hero">
    <div class="content">
        <h1 class="fade-in">You never actually own a Saiyan Timepiece.</h1>
        <p class="subtitle fade-in-delay">You merely look after it for the next generation.</p>
        <div class="cta-group fade-in-delay-2">
            <a href="#collection" class="btn-primary">Discover the Legacy</a>
            <a href="#artisan" class="btn-secondary">The Craftsmanship</a>
        </div>
    </div>
</section>

<style>
    .hero {
        height: 90vh;
        width: 100%;
        background-image: url('/images/hero-bg.png'); /* Custom AI Generated Asset */
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        position: relative;
        margin-top: 5rem; /* Space for fixed header */
        isolation: isolate;
    }

    .hero::after {
        content: '';
        position: absolute;
        inset: 0;
        background: rgba(253, 251, 247, 0.4);
        z-index: -1;
    }

    .content {
        position: relative;
        z-index: 2;
        padding: 0 20px;
        max-width: 800px;
    }

    h1 {
        font-size: 3.5rem;
        line-height: 1.2;
        margin-bottom: 2rem;
        color: var(--color-ink);
        text-shadow: 0 0 20px rgba(253, 251, 247, 0.8);
    }

    .subtitle {
        font-size: 1.2rem;
        color: var(--color-ink);
        margin-bottom: 3rem;
        font-weight: 400;
        letter-spacing: 0.1em;
        font-style: italic;
        font-family: var(--font-heading);
    }

    .cta-group {
        display: flex;
        gap: 2rem;
        justify-content: center;
    }

    .btn-primary {
        padding: 1rem 3rem;
        background: var(--color-ink);
        color: var(--color-paper);
        text-transform: uppercase;
        letter-spacing: 0.2em;
        font-size: 0.8rem;
        transition: all 0.3s ease;
        border: 1px solid var(--color-ink);
    }

    .btn-primary:hover {
        background: var(--color-dragon-orange);
        border-color: var(--color-dragon-orange);
        color: white;
    }

    .btn-secondary {
        padding: 1rem 3rem;
        border: 1px solid var(--color-ink);
        color: var(--color-ink);
        text-transform: uppercase;
        letter-spacing: 0.2em;
        font-size: 0.8rem;
        transition: all 0.3s ease;
    }

    .btn-secondary:hover {
        background: var(--color-ink);
        color: var(--color-paper);
    }

    /* Animations */
    .fade-in {
        animation: fadeInUp 1.5s ease-out forwards;
        opacity: 0;
        transform: translateY(20px);
    }

    .fade-in-delay {
        animation: fadeInUp 1.5s ease-out 0.5s forwards;
        opacity: 0;
        transform: translateY(20px);
    }

    .fade-in-delay-2 {
        animation: fadeInUp 1.5s ease-out 1s forwards;
        opacity: 0;
        transform: translateY(20px);
    }

    @keyframes fadeInUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @media (max-width: 768px) {
        h1 {
            font-size: 2.2rem;
        }
        
        .cta-group {
            flex-direction: column;
            gap: 1rem;
        }
    }
</style>
